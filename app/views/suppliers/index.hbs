 <h1 class="text-2xl font-bold mb-4">LIST VIEW</h1>
<div class="mt-6 bg-white p-4 rounded shadow-md">
  <div class="flex justify-between items-center mb-4">
    <h2 class="text-xl font-semibold">Suppliers</h2>
    <a href="/suppliers/create" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded">
      <i class="fas fa-plus"></i> Add Supplier
    </a>
  </div>
  
  <table id="dataTable" class="min-w-full bg-white rounded">
    <thead class="bg-gray-200 text-gray-700">
      <tr>
        <th class="">Name</th>
        <th class="">Contact Name</th>
        <th class="">Phone number</th>
        <th class="">Email</th>
        <th class="">Address</th>
        <th class="">Updated At</th>
        <th class="">Actions</th>
      </tr>
    </thead>
    <tbody>

      {{#each data}}
      <tr>
        <td class="py-2 px-4 border-b">{{this.name}}</td>
        <td class="py-2 px-4 border-b">{{this.contact_name}}</td>
        <td class="py-2 px-4 border-b">{{this.phone_number}}</td>
        <td class="py-2 px-4 border-b">{{this.email}}</td>
        <td class="py-2 px-4 border-b">{{this.address}}</td>
        <td class="py-2 px-4 border-b">{{this.created_at}}</td>
        <td class="py-2 px-4 border-b text-center space-x-2">
          <button class="text-blue-600 hover:text-blue-800">
            <i class="fas fa-eye"></i>
          </button>
          <a href="/suppliers/{{this.id}}/edit" class="text-gray-600 hover:text-gray-800">
            <i class="fas fa-pen"></i>
          </a>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>
