<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Responsive Admin Dashboard with DataTables</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
  
  <!-- DataTables CSS -->
  <link href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" rel="stylesheet">

  <!-- Script for handling sidebar toggle -->
  <script defer>
    function toggleSidebar() {
      const sidebar = document.getElementById('sidebar');
      sidebar.classList.toggle('-translate-x-full');
    }
  </script>

  <style>
    /* Transition for smooth sidebar open/close */
    #sidebar {
      transition: transform 0.3s ease-in-out;
    }
    /* Custom DataTable styling */
    .dataTables_wrapper .dataTables_paginate .paginate_button {
      padding: 0.5rem 1rem;
      margin: 0.25rem;
      border-radius: 0.375rem;
      color: #1f2937;
      background-color: #e5e7eb;
    }
    .dataTables_wrapper .dataTables_paginate .paginate_button.current {
      background-color: #3b82f6;
      color: white;
    }
    .dataTables_wrapper .dataTables_filter input {
      margin-left: 0.5rem;
      padding: 0.5rem;
      border: 1px solid #d1d5db;
      border-radius: 0.375rem;
    }
  </style>
</head>
<body class="bg-gray-100 flex h-screen">

  <!-- Mobile Menu Button -->
  <div class="lg:hidden absolute top-4 left-4 z-50">
    <button onclick="toggleSidebar()" class="text-gray-500 focus:outline-none">
      <i class="fas fa-bars fa-2x"></i>
    </button>
  </div>

  <!-- Sidebar -->
  {{!-- <div id="sidebar" class="w-64 h-full bg-gray-900 text-white flex flex-col justify-between absolute lg:relative transform lg:translate-x-0 -translate-x-full z-40"> --}}
    <!-- Sidebar content... -->
    
    {{> sidebar }}
    
  <!-- Main Content Area -->
  <div class="flex-1 flex flex-col max overflow-auto">
    <!-- Top Navbar -->
    {{!-- <div class="w-full bg-white h-16 px-6 flex items-center justify-between shadow"> --}}
        {{> header}}
    {{!-- </div> --}}

    <!-- Content Area -->
    <div class="p-6">

       {{{body}}}
     
    </div>
  </div>

  <!-- jQuery and DataTables JS -->
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>

  <!-- Initialize DataTable -->
  <script>
    $(document).ready(function() {
      $('#dataTable').DataTable({
        pagingType: 'simple_numbers', // Simple pagination with page numbers
        pageLength: 10, // Show 10 entries by default
        dom: '<"flex justify-between items-center mb-4"lf>tip', // Custom layout for search and entries
        language: {
          search: "Search categories:", // Customize search placeholder
          lengthMenu: "Show _MENU_ categories"
        }
      });
    });
  </script>
</body>
</html>
