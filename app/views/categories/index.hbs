 <h1 class="text-2xl font-bold mb-4">LIST VIEW</h1>
<div class="mt-6 bg-white p-4 rounded shadow-md">
  <div class="flex justify-between items-center mb-4">
    <h2 class="text-xl font-semibold">Categories</h2>
    <a href="/categories/create" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded">
      <i class="fas fa-plus"></i> Add Category
    </a>
  </div>
  
  <table id="dataTable" class="min-w-full bg-white rounded">
    <thead class="bg-gray-200 text-gray-700">
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>

      {{#each data}}
      <tr>
        <td>{{this.name}}</td>
        <td>{{this.description}}</td>
        <td class="py-2 px-4 border-b text-center space-x-2">
          <button class="text-blue-600 hover:text-blue-800">
            <i class="fas fa-eye"></i>
          </button>
          <button class="text-gray-600 hover:text-gray-800">
            <i class="fas fa-pen"></i>
          </button>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>
